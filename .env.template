# Sokkary V2 - Environment Configuration Template
# Copy this file to .env and fill in your API keys

# ============================================================
# AI Model API Keys
# ============================================================

# Anthropic (Claude) - Optional
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# OpenAI - Optional
# Get from: https://platform.openai.com/
OPENAI_API_KEY=

# Groq - Optional
# Get from: https://console.groq.com/
GROQ_API_KEY=

# Kimi K2 (Moonshot AI) - Primary Model
# Get from: https://platform.moonshot.ai/
KIMI_API_KEY=sk-BG3wAlQj0HUdXqTsuGuSaoaHVcdiGruODm3DhC6aFB6fEPD2
KIMI_API_URL=https://api.moonshot.ai/v1/chat/completions
KIMI_MODEL=kimi-k2-turbo-preview

# ============================================================
# System Configuration
# ============================================================

# Default model to use (kimi, claude, groq, openai)
DEFAULT_MODEL=kimi

# Maximum tokens for responses
MAX_TOKENS=4000

# Temperature for model sampling (0.0 - 1.0)
TEMPERATURE=0.7

# Agent execution timeout (seconds)
AGENT_TIMEOUT=60

# Enable debug logging
DEBUG=false

# LangSmith Tracing (Optional)
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=sokkary-v2
LANGSMITH_TRACING=false

# ============================================================
# Agent Configuration
# ============================================================

# Enable parallel agent execution (experimental)
ENABLE_PARALLEL_AGENTS=false

# Maximum agent retry attempts
MAX_AGENT_RETRIES=3

# Agent communication protocol
AGENT_PROTOCOL=sequential

# ============================================================
# MCP Configuration
# ============================================================

# Model Context Protocol settings
MCP_ENABLED=true
MCP_CONTEXT_SIZE=8192
MCP_CACHE_DIR=.cache/mcp

# ============================================================
# Tools & Skills
# ============================================================

# Enable specific tool categories
ENABLE_FILE_TOOLS=true
ENABLE_WEB_TOOLS=true
ENABLE_CODE_TOOLS=true
ENABLE_DATA_TOOLS=true

# Skill execution safety level (low, medium, high)
SKILL_SAFETY_LEVEL=medium

# ============================================================
# Logging
# ============================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Log directory
LOG_DIR=logs

# Keep logs for N days
LOG_RETENTION_DAYS=30
